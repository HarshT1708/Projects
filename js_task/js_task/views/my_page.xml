<odoo>
    <template id="my_page" name="My Page">
        <t t-call="website.layout">
            <div id="mydiv">
                <center>
                    <h1>This is for task Purpose.</h1>
                </center>
                <center><button type="button" class="btn-lg btn-primary mybutton">Test Button</button></center>
            </div>
            <div class="modal" tabindex="-1" role="dialog" id="modelWindow">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modal title</h5>
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                <span>x</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label for="fname">Name:</label>
                            <input type="text" id="fname" name="name" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary mysave">Save changes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>